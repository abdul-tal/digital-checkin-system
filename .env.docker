# Application
NODE_ENV=production
LOG_LEVEL=info

# MongoDB (Docker networking)
MONGODB_URI=mongodb://mongodb:27017/skyhigh?replicaSet=rs0
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# Redis (Docker networking)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Service URLs (Docker networking)
SEAT_SERVICE_URL=http://seat-service:3001
CHECKIN_SERVICE_URL=http://checkin-service:3002
PAYMENT_SERVICE_URL=http://payment-service:3003
WAITLIST_SERVICE_URL=http://waitlist-service:3004
NOTIFICATION_SERVICE_URL=http://notification-service:3005
WEIGHT_SERVICE_URL=http://weight-service:3006
ABUSE_DETECTION_SERVICE_URL=http://abuse-detection-service:3007

# Service Ports
API_GATEWAY_PORT=3000
SEAT_SERVICE_PORT=3001
CHECKIN_SERVICE_PORT=3002
PAYMENT_SERVICE_PORT=3003
WAITLIST_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005
WEIGHT_SERVICE_PORT=3006
ABUSE_DETECTION_SERVICE_PORT=3007

# Mock Service Configuration
MOCK_PAYMENT_DELAY_MS=1000
MOCK_PAYMENT_SUCCESS_RATE=1.0
MOCK_WEIGHT_DELAY_MS=500

# Business Rules
SEAT_HOLD_DURATION_SECONDS=20
WAITLIST_HOLD_DURATION_SECONDS=300
PAYMENT_EXPIRY_MINUTES=30
CANCELLATION_WINDOW_HOURS=2
BAGGAGE_WEIGHT_LIMIT=25
BAGGAGE_MAX_WEIGHT=32

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
CACHE_SEATMAP_TTL_SECONDS=30
