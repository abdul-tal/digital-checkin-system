# Application
NODE_ENV=development
LOG_LEVEL=info

# MongoDB
MONGODB_URI=mongodb://localhost:27017/skyhigh?replicaSet=rs0
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

